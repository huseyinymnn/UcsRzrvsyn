@model List<UcusRez.Models.Bilet>
@{
    ViewData["Title"] = "Rezervasyon";
    Layout = "~/Views/Shared/AdminPanel.cshtml";
}

<div id="page-wrapper">
	<div class="main-page">
		<h3 class="title1">Tüm Rezervasyonlar</h3>
		<div class="blank-page widget-shadow scroll" id="style-2 div1">
			<section class="section__container booking__container">
				<div class="booking__nav">
					<span>Rezervasyon Bilgileri</span>
				</div>
				<style>
					table {
						border-collapse: collapse;
						width: 100%;
						margin-top: 20px;
					}

					th, td {
						border: 1px solid #dddddd;
						text-align: left;
						padding: 8px;
					}

					th {
						background-color: #f2f2f2;
					}

					tr:nth-child(even) {
						background-color: #f9f9f9;
					}

					tr:hover {
						background-color: #e0e0e0;
					}
				</style>
				<table border="1">
					<thead>
						<tr>
							<td>Bilet No</td>
							<td>Ad</td>
							<td>Soyad</td>
							<td>Cinsiyet</td>
							<td>Pasaport No</td>
							<td>Doğum tarihi</td>
							<td>Mail</td>
							<td>Kalkış Şehri</td>
							<td>Varış Şehri</td>
							<td>Kalkış Tarihi</td>
							<td>Koltuk No</td>
						</tr>
					</thead>
					<tbody>
						@if (Model != null)
						{
							@foreach (var bilet in Model)
							{
								<tr>
									<td>@bilet.BiletId</td>
									<td>@bilet.YolcuAd</td>
									<td>@bilet.YolcuSoyad</td>
									<td>@bilet.YolcuCinsiyet</td>
									<td>@bilet.YolcuPasaport</td>
									<td>@bilet.YolcuDogumTarihi</td>
									<td>@bilet.YolcuMail</td>
									<td>@bilet.KalkisSehri</td>
									<td>@bilet.VarisSehri</td>
									<td>@bilet.KalkisTarihi</td>
									<td>@bilet.KoltukNumarasi</td>
								</tr>
							}
						}
					</tbody>
				</table>
			</section>
		</div>
	</div>
</div>

